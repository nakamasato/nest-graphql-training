// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime
  updatedAt DateTime
  email     String   @unique
  password  String
  name      String
  hobbies   Hobby[]
}

model Hobby {
  id     Int    @id @default(autoincrement())
  name   String
  User   User?  @relation(fields: [userId], references: [id])
  userId Int?
}
